{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2022",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "./dist",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "allowJs": true,
    "resolveJsonModule": true,

    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"],
    }
  }
}
